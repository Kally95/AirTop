<!-- form to create an airdrop event -->
<%= simple_form_for(airdrop) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :crypto%>
    <%= f.input :amount%>
    <%= f.input :description %>
    <%= f.button :submit %>
  </div>

<% end %>
